<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/refresh_button"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="换"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warming_text_view" />

    <EditText
        android:id="@+id/build_number"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="date"
        android:minHeight="48dp"
        android:text="60"
        app:layout_constraintBottom_toBottomOf="@+id/refresh_button"
        app:layout_constraintEnd_toStartOf="@+id/refresh_button"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/refresh_button"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/warming_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注意⚠️：所有号码均为随机掷出，若有雷同纯属巧合。"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/github_url_text_view"
        android:layout_width="255dp"
        android:layout_height="28dp"
        android:layout_marginBottom="4dp"
        android:text="github.com/Core2002/IDCardBuilder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/view_bing_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:text="过防沉迷"
        app:layout_constraintBottom_toBottomOf="@+id/refresh_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toEndOf="@+id/refresh_button"
        app:layout_constraintTop_toTopOf="@+id/refresh_button"
        app:layout_constraintVertical_bias="1.0" />

    <ListView
        android:id="@+id/res_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/github_url_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/refresh_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
